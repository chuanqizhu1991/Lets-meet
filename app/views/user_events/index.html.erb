<p id="notice"><%= notice %></p>

<h1>Recent joining</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Location</th>
      <th>Joiner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_events.each do |user_event| %>
      <tr>
        <td><%= Event.find(user_event.event_id).title %></td>
        <td><%= Event.find(user_event.event_id).time %></td>
        <td><%= Event.find(user_event.event_id).location %></td>
        <td><%= User.find(user_event.user_id).email %></td>
        <%if user_signed_in?%>
        <%if current_user.id==user_event.user_id%>
        <td><%= link_to 'Cancel', user_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
